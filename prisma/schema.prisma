generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {

  id_usuario  Int @id@default(autoincrement())
  nome  String
  email String  @unique
  senha String
  role  String
}

model Post {

  id_post Int @id@default(autoincrement())
  titulo String
  texto String
  imagem  String
  data  DateTime
  fk_id_usuario Int
}

model Comentario {

  id_comentario Int @id@default(autoincrement())
  texto String
  fk_id_post  Int
  fk_id_usuario Int
}